<%= simple_form_for(@compute, :html => {:class => "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.association :environment, :collection => Environment.all %>
    <%= f.association :balancer, :collection => Balancer.all %>
    <%= f.input :region %>
    <%= f.input :flavor %>
    <%= f.input :image %>
    <%= f.input :groups %>
    <%= f.input :keypair %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
