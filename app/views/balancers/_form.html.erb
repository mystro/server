<%= simple_form_for(@balancer, :html => {:class => "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.association :organization, :collection => Organization.all %>
    <%= f.association :environment, :collection => Environment.with_organization(current_user.organization).all %>
    <%= f.input :primary, :as => :boolean %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
